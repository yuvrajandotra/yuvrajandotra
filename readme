#include<Keypad.h>

const byte Rows=4;
const byte Cols=4;

char keys[Rows][Cols]={
  {'1','2','3','+'},
  {'4','5','6','-'},  
    {'7','8','9','*'},
    {'@','0','#','%'}
};

byte rowpins[Rows]={9,8,7,6};
byte colpins[Cols]={5,4,3,2};

Keypad keypad=Keypad(makeKeymap(keys),rowpins,colpins,Rows,Cols);

void setup(){
  Serial.begin(9600);
}

void loop(){
  char key=keypad.getKey();
  if(key){
    {
      Serial.print("key pressed: ");
      Serial.println(key);
    }
  }
}
