}



#include "DHT.h"

#define DHTPIN 2       // Data pin connected to D2
#define DHTTYPE DHT22  // DHT22 (AM2302)

#define LED_DRY 8
#define LED_WET 9

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(9600);
  dht.begin();

  pinMode(LED_DRY, OUTPUT);
  pinMode(LED_WET, OUTPUT);
}

void loop() {
  float humidity = dht.readHumidity();

  if (isnan(humidity)) {
    Serial.println("Failed to read from DHT22 sensor!");
    return;
  }

  Serial.print("Humidity: ");
  Serial.print(humidity);
  Serial.println(" %");

  if (humidity < 60.0) {  
    Serial.println("Waste classified as: DRY");
    digitalWrite(LED_DRY, HIGH);
    digitalWrite(LED_WET, LOW);
  } else {
    Serial.println("Waste classified as: WET");
    digitalWrite(LED_WET, HIGH);
    digitalWrite(LED_DRY, LOW);
  }

  delay(2000);
}



int sensorPin = A0;      // Analog input pin for pH sensor (simulated using potentiometer)
float sensorValue = 0;   
float pHValue = 0;

void setup()
{
  Serial.begin(9600);
  Serial.println("pH Value Detection of Substances");
  Serial.println("--------------------------------");
}

void loop()
{
  // Read simulated sensor value
  sensorValue = analogRead(sensorPin);
  
  // Convert the analog value (0–1023) into pH range (0–14)
  pHValue = (sensorValue * 14.0) / 1023.0;
  
  Serial.print("Measured pH Value: ");
  Serial.println(pHValue);

  // Identify the substance based on typical pH ranges
  if (pHValue >= 6.4 && pHValue <= 6.8)
 {
    Serial.println("Substance: Milk");
  }
  else if (pHValue >= 6.9 && pHValue<= 7.1)
 {
    Serial.println("Substance: Water");
 } 
  else if (pHValue >= 9.0 && pHValue<=10.0)
 {
    Serial.println("Substance: Lime Water");
 } 
  
  else
 {
    Serial.println("Unknown substance or out of range");
  }

 // Determine the nature of the substance
  if (pHValue < 7.0)
 {
    Serial.println("Nature: Acidic");
  } 
  else if (pHValue == 7.0)
 {
    Serial.println("Nature: Neutral");
  } 
  else
 {
    Serial.println("Nature: Basic (Alkaline)");
  }
  Serial.println("--------------------------------");
  delay(3000);  // Wait 3 seconds before next reading
}



