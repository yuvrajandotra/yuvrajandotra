const int trigPin = 9;
const int echoPin = 10;
const int soundSensor = A0;
const int greenLed=7;
const int redLed = 8;
const int buzzerPin = 6;
// Threshold values
const int safeDistance=75;
const int soundThreshold = 500;  // Adjust based on your environment
const int distanceThreshold = 50; // Distance in cm (adjust as needed)
// Variables
long duration;
int distance;
int soundValue;
bool intrusionDetected = false;
void setup() {
  // Initialize serial communication
  Serial.begin(9600);
  // Set pin modes
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  pinMode(soundSensor, INPUT);
  pinMode(greenLed, OUTPUT);
  pinMode(redLed, OUTPUT);
  pinMode(buzzerPin, OUTPUT);
  // Initial state
  digitalWrite(greenLed, HIGH);
  digitalWrite(redLed, LOW);
  noTone(buzzerPin);
  Serial.begin(9600);
    Serial.println("Intrusion Detection System Initialized");
}
void loop() {
  // Measure distance with ultrasonic sensor
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
  duration = pulseIn(echoPin, HIGH);
  distance = duration * 0.034 / 2; // Calculate distance in cm
   // Read sound sensor value
  soundValue = analogRead(soundSensor);
  // Check for intrusion
  if (distance < safeDistance || soundValue > soundThreshold) {
    if(!intrusionDetected){
    intrusionDetected = true;
    triggerAlarm();
    Serial.println("INTRUSION DETECTED!");
    Serial.print("Distance: ");
    Serial.print(distance);
 Serial.print(" cm | Sound Level: ");
    Serial.println(soundValue);
    }} else {
    if (intrusionDetected) {
      // Intrusion no longer detected
      intrusionDetected = false;
      stopAlarm();
      Serial.println("Area secure");
    }
  }
  
  delay(100); // Small delay between readings
}



int motorPin = 9;   // PWM-capable pin connected to the transistor base via resistor
void setup() {
  pinMode(motorPin, OUTPUT);  // Set the pin as output
}

void loop() {
  // Ramp up speed from 0 to full (255)
  for (int speed = 0; speed <= 255; speed += 5) {
    analogWrite(motorPin, speed);  // Set PWM value for speed control
    delay(30);  // Short delay for smooth ramp
  }
  
  // Ramp down speed from full (255) to 0
  for (int speed = 255; speed >= 0; speed -= 5) {
    analogWrite(motorPin, speed);  // Set PWM value for speed control
    delay(30);  // Short delay for smooth ramp
  }
}


